@{
    ViewBag.Title = "downloaddatamanager";
}


<link href="~/js/dist/bootstrap-table-1.11.1/bootstrap-table.min.css" rel="stylesheet" />
<script src="~~/js/wizard.min.js"></script>
<script src="~~/js/bootbox.min.js"></script>
<script src="~~/js/dist/bootstrap-table-1.11.1/bootstrap-table.min.js"></script>
<script src="~~/js/dist/bootstrap-table-1.11.1/locale/bootstrap-table-zh-CN.min.js"></script>
<script src="~/js/js/common.js"></script>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <table id="table_files"></table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        window.actionEvents = {
            'click .downfiles': function (e, value, row, index) {
                location.href = "/sysmanager/DownFile?fileName=" + row.fileName;
            }
        }

        $('#table_files').bootstrapTable({
            columns: [
                { field: 'fileName', title: '文件名', width: '90%' },
                { field: 'id', title: '操作', align: 'center',width:'10', formatter: actionFormatters, events: actionEvents}
            ],
            url: '/api/sysManagerApi/getFileList',
            //data: data,
            striped: true,
        });

        function actionFormatters(value, row, index) {
            return '<a class="downfiles" href="javascript:void(0)" data-toggle="tooltip" >下载</a>';
        }
        
        
    })
    

</script>


